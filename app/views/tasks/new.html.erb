<%= form_with(model: @task, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
    <div class="form-group">
      <%= f.label :description, class: "col-2 col-form-label text-light" %>
      <%= f.text_field :description, class: "form-control shadow rounded", placeholder: "Enter a task name" %>
    </div>
    <div class="form-group">
      <%= f.label :feature_id, class: "col-2 col-form-label text-light" %>
      <%= f.text_field :feature_id, class: "form-control shadow rounded", placeholder: "Enter feature id" %>
    </div>
    <div class="form-group row justify-content-center">
      <%= f.submit("Save",class: "btn btn-success btn-lg") %>
    </div>
  <% end %>