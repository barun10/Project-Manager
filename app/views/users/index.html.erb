<div class = "container m-3">
  <div class="row">
    <div class="col-4">
    </div>
    <div class="col-4">
      <%if @user_name || session[:user_id] %>
        <div class="container">
          <%if @user_name %>
            <h4>Hi, <%= @user_name %>!</h4>
          <% else %>
            <h4>Hi, <%= User.find(session[:user_id]).name  %>!</h4>
          <% end %>
          <br>  
          <%= link_to 'My projects', projects_path %>
          <br>
        </div>
        <%= link_to 'Log out', {:controller => :auth, :action => :signout}%>

      <% else %>
        <%= link_to 'Sign up', '/signup', class: "btn btn-primary btn-block m-3" %>
        <%= link_to 'Log in', '/login', class: "btn btn-success btn-block m-3" %>
        <%= link_to 'Sign in using outlook', "/auth/microsoft_graph_auth", method: :post, class: "btn btn-primary btn-block m-3" %> 
      <% end %>
    </div>
    <div class="col-4"></div>
  </div>
  <div>
    
  </div>
 
</div>


