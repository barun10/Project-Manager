<%if current_user %>
  <%= render 'show' %>
<% else %>

<div class="row">
  <div class="col-2"></div>
  <div class="col-6">
    <%= link_to 'Sign up', new_user_path, class: "btn btn-primary btn-block m-4" %>
    <%= link_to 'Log in', login_path, class: "btn btn-success btn-block m-4" %>
    <%= link_to 'Sign in using outlook', "/auth/microsoft_graph_auth", method: :post, class: "btn btn-primary btn-block m-4" %>
  </div>
  <div class="col-2"></div>
</div>
<% end %>
