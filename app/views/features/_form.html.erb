<%= form_with(model: [@project, @feature], local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "text-white"%>
    <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Enter your title" %>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "text-white"%>
    <%= f.text_field :description, class: "form-control shadow rounded", placeholder: "Enter description" %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :project_id, class: "form-control shadow rounded" %>
  </div> 

  <div class="form-group">
    <%= f.label :panel, class: "text-white"%>
    <br>
    <%= f.select :panel_name, options_for_select([['current', 'current'], ['icebox', 'icebox'], ['backlog', 'backlog']]) %>
  </div> 

  <div class="form-group">
    <%= f.label :file, class: "text-white"%>
    <br>
    <%= f.file_field :file %>
  </div>

  <div class="form-group">
    <%= f.label :status, class: "text-white"%>
    <br>
    <%= f.select :status, options_for_select([['Started', 'Started'], ['Finished', 'Finished'], ['Delivered', 'Delivered']]) %>
  </div> 
    
  <div class="form-group">
    <%= f.label :current_user, class: "text-white"%>
    <br>
    <%= f.select :current_user, options_for_select(User.all.collect {|user| [user.name] }), class: "common" %>
  </div>

  <div class="form-group">
    <%= f.submit("Save",class: "btn btn-success btn-lg") %>
  </div>
<% end %>


<%= javascript_include_tag "https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.16/js/bootstrap-multiselect.min.js" %>

<%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.16/css/bootstrap-multiselect.min.css" %>

<%= javascript_include_tag "sidenavscript.js" %>
